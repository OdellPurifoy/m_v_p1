<!-- Page Content -->
  <div class="container mb-5">
    <div class="row">
      <div class="col-md-10 offset-md-1">
      <!-- Post Content Column -->
        <div class="col-lg-12">

          <!-- Title -->
          <h1 class="mt-4"><%= @post.title %></h1>
          <!-- Author -->
          <p class="lead">
            <%= fa_icon('pen', type: :fas) %>
            <%= @post.user.full_name_display %>
          </p>
          <small>Category: <%= @post.category %></small>
          <hr>
          <!-- Date/Time -->
          <p><%= @post.created_at.strftime('%B %d, %Y') %></p>
          <hr>
          <!-- Preview Image -->
          <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">
          <hr>
          <!-- Post Content -->
          <p><%= @post.content %></p>
          <% if current_user.admin == true %>
            <%= fa_icon('edit', type: :fas) %> <%= link_to 'Edit', edit_post_path %> |
            <%= fa_icon('hand-point-left', type: :fas) %> <%= link_to 'Back', posts_path %>
          <% else %>
            <%= fa_icon('hand-point-left', type: :fas) %> <%= link_to 'Back', posts_path %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
