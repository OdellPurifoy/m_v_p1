<%= simple_form_for @post, url: new_post_path do |f| %>
  <%= f.input :title %>
  <%= f.input :content %>
  <%= f.input :category, collection: Post::CATEGORIES, input_html: { multiple: false } %>

  <%= f.button :submit, class: "btn-primary" %>
  <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
<% end %>
