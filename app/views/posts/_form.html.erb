<div class="section">
<%= simple_form_for @post do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :title, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :content, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }  %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.file_field :main_image, wrapper: false, label_html: { class: 'label' }  %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.hidden_field :user_id, value: current_user.id %>
    </div>
  </div>

  <%= f.button :submit, 'Create Post', class: "btn btn-sm mt-3" %>
<% end %>
</div>
