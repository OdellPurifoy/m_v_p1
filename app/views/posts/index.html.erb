<% @posts.each do |post| %>
<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-12">
      <article class="blog-card">
        <div class="blog-card__background">
          <% if post.main_image.present? %>
            <div class="card__background--wrapper">
              <div class="card__background--main"><%= image_tag post.main_image %>
                <div class="card__background--layer"></div>
              </div>
            </div>
          <% else %>
            <div class="card__background--wrapper">
              <div class="card__background--main" style="background-image: url('http://demo.yolotheme.com/html/motor/images/demo/demo_131.jpg');">
                <div class="card__background--layer"></div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="blog-card__head">
          <span class="date__box">
          <span class="date__day"><%= post.created_at.strftime('%d') %></span>
          <span class="date__month"><%= post.created_at.strftime('%b') %></span>
          </span>
        </div>
        <div class="blog-card__info">
          <h5><%= post.title %></h5>
          <p>
            <p><%= fa_icon('edit', type: :fas) %> <%= post.user.full_name_display %></p>
          </p>
          <p><%= truncate(strip_tags(post.rich_text_content.to_s), length: 350) %></p>
            <%= link_to 'Read Story', post, class: "btn btn-sm" %>
          <div class="mt-3">
            <%= post.comments.count %> <%= post.comments.count > 1 ? 'Comments' : 'Comment' %> <%= fa_icon('comment', type: :fas, class: 'ml-1') %>
          </div>
        </div>
      </article>
    </div>
  </div>
</div>
<% end %>
