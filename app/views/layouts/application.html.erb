<!DOCTYPE html>
<html>
  <head>
    <title>MVP1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Start of navbar -->
      <%= render "shared/navbar" %>
    <!-- End of navbar -->

    <!-- Start of jumbotron -->
      <%= render "shared/jumbotron" %>
    <!-- End of jumbotron -->

    <!-- Main content -->
      <div class="container">
        <%= yield %>
      </div>
    <!-- End of main content -->

    <!-- Start of footer -->
      <%= render "shared/footer" %>
    <!-- End of footer -->
  </body>
</html>
